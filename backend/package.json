{
  "name": "riverside-backend",
  "version": "1.0.0",
  "description": "Backend API for Riverside-like video meeting application",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "validate": "node validate-backend.js",
    "db:migrate": "npx prisma migrate dev",
    "db:deploy": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:seed": "node prisma/seed.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "docker:build": "docker build -t riverside-backend .",
    "docker:run": "docker run -p 5000:5000 riverside-backend"
  },
  "keywords": [
    "video",
    "meeting",
    "webrtc",
    "socket.io",
    "recording",
    "riverside"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.17.0",
    "aws-sdk": "^2.1691.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "postgres": "^3.4.7",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.8.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prisma": "^6.16.2",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/riverside-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/riverside-backend/issues"
  },
  "homepage": "https://github.com/yourusername/riverside-backend#readme"
}
